    gtag('js', new Date());

    gtag('config', 'G-R2B4E76E6P');
    gtag('config', 'UA-216497173-1');
    </script>
    <!-- end Global site tag (gtag.js) - Google Analytics -->
  </body>
  <script src="/static/app.min.js" defer></script>
</html>
